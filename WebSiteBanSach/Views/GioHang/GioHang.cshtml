@using WebSiteBanSach.Models;
@model List<GioHang>
<link href="~/Content/TrangChuCss.css" rel="stylesheet" />
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/LayOut/NguoiDungLayout.cshtml";
}
<div id="divGioHang">
    <table border="1" cellpadding="2" cellspacing="15" width="1000" height="400">
        <tr>
            <td>Tên sách</td>
            <td>Ảnh bìa</td>
            <td id="TenCot">Đơn giá</td>
            <td id="TenCot">Số lượng</td>
            <td id="TenCot">Thành tiền</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item._TenSach</td>
                <td><a href="@Url.Action("XemChiTiet", "Sach", new { @_MaSach=item._MaSach})"><img src="@Url.Content("~/HinhAnhSP/"+@item._AnhBia)" width="100" height="150" /></a></td>
                <td id="ChuSo">@string.Format("{0:0,0}", @item._DonGia) vnđ</td>
                <td id="ChuSo">@item._SoLuong</td>
                <td id="ChuSo">@string.Format("{0:0,0}", @item._ThanhTien) vnđ</td>
            </tr>
        }
        <tr>
            <td colspan="6" id="ChuSo">
                Tổng tiền: @Html.Action("GioHangTongTien", "GioHang")
            </td>
        </tr>
        <tr>
            <td colspan="6" id="TenCot">
                @using(Html.BeginForm("HoaDon","GioHang"))
                {
                    <input type="submit" style="background-color:green;color:white;font-size:12pt;cursor:pointer" value="Thanh toán" />
                }
            </td>
        </tr>
    </table>
</div>
