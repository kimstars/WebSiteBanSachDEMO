                <div id="CanhBao">@Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })</div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DienThoai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
