@model WebSiteBanSach.Models.KhachHang
<link href="~/Content/TrangChuCss.css" rel="stylesheet" />
@{
    ViewBag.Title = "Sửa Thông tin";
    Layout = "~/Views/LayOut/NguoiDungLayout.cshtml";
}

<h2 id="KhachHang">Thông tin Mới</h2>

@using (Html.BeginForm("ChinhSua","NguoiDung",FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" id="KhachHang">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaKH)
        @Html.HiddenFor(model => model.Quyen)
        @Html.HiddenFor(model => model.TaiKhoan)

        <div class="form-group">
            @Html.LabelFor(model => model.HoTen, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                <div id="CanhBao">@Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })</div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                <div id="CanhBao">@Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })</div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
