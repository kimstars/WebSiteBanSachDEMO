@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<WebSiteBanSach.Models.ChuDe>
<link href="~/Content/TrangChuCss.css" rel="stylesheet" />

@{
    ViewBag.Title = "Quản lý Chủ đề";
    Layout = "~/Views/LayOut/AdminLayout.cshtml";
}

<p>
    @Html.ActionLink("Thêm mới Chủ đề", "ThemMoi")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model=>model.First().TenChuDe)
        </th>
        <th>
            Sửa
        </th>
        <th>
            Xóa
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenChuDe)
        </td>
        <td>
            @Html.ActionLink("Sửa", "ChinhSua", new { @_MaChuDe = item.MaChuDe })
        </td>
        <td>
            @Html.ActionLink("Xóa", "Xoa", new { @_MaChuDe = item.MaChuDe })
        </td>
    </tr>
}

</table>
<div id="divBody">
    <br />
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
</div>
<div id="divBody" class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", "QuanLyChuDe", new { _Page = page }))
</div>
